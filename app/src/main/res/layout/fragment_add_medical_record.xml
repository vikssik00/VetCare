<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_app"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Новая медицинская запись"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/primary"
                android:layout_marginBottom="16dp"/>

            <!-- Диагноз -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Диагноз *"
                android:textSize="14sp"
                android:textColor="@color/text_color"
                android:layout_marginBottom="4dp"/>

            <EditText
                android:id="@+id/etDiagnosis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:background="@drawable/edit_text_background"
                android:padding="12dp"
                android:hint="Введите диагноз"
                android:textSize="14sp"
                android:layout_marginBottom="16dp"/>

            <!-- Лечение -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Лечение и процедуры"
                android:textSize="14sp"
                android:textColor="@color/text_color"
                android:layout_marginBottom="4dp"/>

            <EditText
                android:id="@+id/etTreatment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="80dp"
                android:background="@drawable/edit_text_background"
                android:padding="12dp"
                android:hint="Опишите лечение и проведенные процедуры"
                android:textSize="14sp"
                android:gravity="top"
                android:layout_marginBottom="16dp"/>

            <!-- Рекомендации -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Рекомендации"
                android:textSize="14sp"
                android:textColor="@color/text_color"
                android:layout_marginBottom="4dp"/>

            <EditText
                android:id="@+id/etRecommendations"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="80dp"
                android:background="@drawable/edit_text_background"
                android:padding="12dp"
                android:hint="Дайте рекомендации владельцу"
                android:textSize="14sp"
                android:gravity="top"
                android:layout_marginBottom="24dp"/>

            <!-- Кнопки -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <Button
                    android:id="@+id/btnCancel"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="Отмена"
                    android:backgroundTint="@color/gray"
                    android:textColor="@color/white"/>

                <Button
                    android:id="@+id/btnSave"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="Сохранить"
                    android:backgroundTint="@color/primary"
                    android:textColor="@color/white"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>