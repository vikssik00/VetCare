<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Фоновая картинка -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/background_image"
        android:contentDescription="фон приложения" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">

            <!-- Заголовок "Вход" по центру -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Вход"
                android:textColor="@color/text_color"
                android:textSize="32sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="8dp" />

            <!-- Подзаголовок -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Войдите в свою учетную запись"
                android:textColor="@color/text_color"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="48dp"
                android:layout_gravity="center_horizontal" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Эл. почта"
                android:textColor="@color/text_color"
                android:textStyle="bold"
                android:textSize="14sp" />

            <!-- Поле email -->
            <EditText
                android:id="@+id/etEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/email_field"
                android:hint="Введите email"
                android:inputType="textEmailAddress"
                android:paddingStart="16dp"
                android:paddingTop="16dp"
                android:paddingEnd="56dp"
                android:paddingBottom="16dp"
                android:textColor="@color/text_color"
                android:textColorHint="#80646464" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Пароль"
                android:textColor="@color/text_color"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginTop="24dp" />

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:hint="Введите пароль"
                android:textColor="@color/text_color"
                android:textColorHint="#80646464"
                android:background="@drawable/password_field"
                android:paddingStart="16dp"
                android:paddingEnd="56dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:layout_marginTop="8dp"
                android:inputType="textPassword" />
            <!-- Забыли пароль? -->
            <TextView
                android:id="@+id/forgot_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:clickable="true"
                android:focusable="true"
                android:minHeight="48dp"
                android:padding="12dp"
                android:text="Забыли пароль?"
                android:textColor="@color/primary"
                android:textStyle="bold"
                android:textSize="14sp" />

            <!-- Кнопка Входа -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="32dp"
                android:backgroundTint="@color/primary"
                android:text="Войти"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                app:cornerRadius="15dp"
                app:strokeColor="@color/primary"
                app:strokeWidth="2dp" />

            <!-- Ссылка на регистрацию -->
            <TextView
                android:id="@+id/tvRedirectSignUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="24dp"
                android:clickable="true"
                android:focusable="true"
                android:minHeight="48dp"
                android:padding="12dp"
                android:text="Нет аккаунта? Зарегистрироваться"
                android:textColor="@color/primary"
                android:textStyle="bold"
                android:textSize="14sp" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>