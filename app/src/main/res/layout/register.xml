<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_app">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">

            <!-- Заголовок "Регистрация" -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Регистрация"
                android:textColor="@color/white"
                android:textSize="28sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="24dp" />

            <!-- Поле Фамилии -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Фамилия"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etLastName"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Введите фамилию"
                android:textColor="@color/white"
                android:textColorHint="#CCFFFFFF"
                android:background="@drawable/edit_text_background"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="8dp"
                android:inputType="textCapWords"
                android:maxLines="1" />

            <!-- Поле Имени -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Имя"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etFirstName"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Введите имя"
                android:textColor="@color/white"
                android:textColorHint="#CCFFFFFF"
                android:background="@drawable/edit_text_background"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="8dp"
                android:inputType="textCapWords"
                android:maxLines="1" />

            <!-- Поле Отчества -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Отчество"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etMiddleName"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Введите отчество"
                android:textColor="@color/white"
                android:textColorHint="#CCFFFFFF"
                android:background="@drawable/edit_text_background"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="12dp"
                android:inputType="textCapWords"
                android:maxLines="1" />

            <!-- Поле Email -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Эл. почта"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etSEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Введите email"
                android:textColor="@color/white"
                android:textColorHint="#CCFFFFFF"
                android:background="@drawable/edit_text_background"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="12dp"
                android:inputType="textEmailAddress"
                android:maxLines="1" />

            <!-- Поле Пароля -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Пароль"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etSPassword"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Введите пароль"
                android:textColor="@color/white"
                android:textColorHint="#CCFFFFFF"
                android:background="@drawable/edit_text_background"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="8dp"
                android:inputType="textPassword"
                android:maxLines="1" />

            <!-- Подтверждение пароля -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Подтвердите пароль"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etSConfPassword"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Повторите пароль"
                android:textColor="@color/white"
                android:textColorHint="#CCFFFFFF"
                android:background="@drawable/edit_text_background"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="12dp"
                android:inputType="textPassword"
                android:maxLines="1" />

            <!-- Выбор роли пользователя -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Роль пользователя"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="14sp" />

            <Spinner
                android:id="@+id/role_spinner"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="4dp"
                android:spinnerMode="dropdown"
                android:entries="@array/user_roles"
                android:background="@drawable/edit_text_background"
                android:paddingStart="12dp" />

            <!-- Кнопка Регистрации -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSSigned"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/white"
                android:text="Зарегистрироваться"
                android:textColor="@color/primary"
                android:textSize="16sp"
                android:textStyle="bold"
                app:cornerRadius="12dp" />

            <!-- Ссылка на вход -->
            <TextView
                android:id="@+id/login_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:clickable="true"
                android:focusable="true"
                android:minHeight="44dp"
                android:padding="8dp"
                android:text="Есть аккаунт? Войти"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="14sp" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>