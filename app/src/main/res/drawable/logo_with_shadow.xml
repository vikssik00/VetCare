<!-- res/drawable/logo_with_shadow.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Мягкая тень -->
    <item
        android:left="4dp"
        android:top="4dp">
        <shape android:shape="oval">
            <solid android:color="#40000000" />
            <size android:width="140dp" android:height="140dp" />
        </shape>
    </item>

    <!-- Основной круг -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:startColor="@color/white"
                android:endColor="#FFE3F2FD"
                android:angle="45" />
            <stroke
                android:width="2dp"
                android:color="#80FFFFFF" />
            <size android:width="140dp" android:height="140dp" />
        </shape>
    </item>

    <!-- Иконка лапки -->
    <item
        android:drawable="@drawable/ic_elegant_paw"
        android:width="60dp"
        android:height="60dp"
        android:gravity="center" />

</layer-list>